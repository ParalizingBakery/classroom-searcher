{
    "manifest_version" : 3,
    "name": "Classroom Searcher",
    "description": "Searches GC for classes",
    "version": "3.3",
    "action": {
      "default_popup": "popup/index.html"
    },
    "content_scripts": [
        {
            "js": [
                "/scripts/content.js"
            ],
            "matches": [
                "https://classroom.google.com/u/*"
            ]
        }
    ],
    "icons": {
        "48": "/icons/gc-48.png",
        "96": "/icons/gc-96.png"
    },
    "browser_specific_settings": {
        "gecko": {
          "id": "gc-searcher@mozilla.org"
        }
    }
}