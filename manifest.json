{
    "manifest_version" : 3,
    "name": "Classroom Searcher",
    "description": "An extension that lets students and teachers search classes they enrolled in Google Classroom.",
    "version": "3.6",
    "action": {
      "default_popup": "popup/index.html"
    },
    "content_scripts": [
        {
            "js": [
                "/scripts/content.js"
            ],
            "matches": [
                "https://classroom.google.com/*"
            ]
        }
    ],
    "icons": {
        "48": "/icons/gc-48.png",
        "96": "/icons/gc-96.png"
    },
    "browser_specific_settings": {
        "gecko": {
          "id": "gc-searcher@wuttiphat.dev"
        }
    }
}